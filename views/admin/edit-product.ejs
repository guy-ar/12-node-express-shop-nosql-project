<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing==='true') { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"
                value="<% if (editing==='true') {%><%=product.title%><%}%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl"
                value="<% if (editing==='true') { %><%=product.imageUrl%><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01"
                value=<% if (editing==='true') { %><%=product.price%><% } %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing==='true') {%><%=product.description%><% } %></textarea>
            </div>
            <% if (editing === 'true') { %>
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %>
            <button class="btn" type="submit"><%= buttonCaption %></button>
        </form>
    </main>
<%- include('../includes/tail') %>